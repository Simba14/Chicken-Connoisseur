<div class='restaurant-feed'>
<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <div class='single-restaurant'>
      <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> </h2>
      <p><%= image_tag restaurant.image.url(:thumb) %></p>
        <% if restaurant.user_id == @user.id %>
          <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
          <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
        <% end %>
      Average rating: <%= star_rating(restaurant.average_rating) %> (<%= pluralize(restaurant.reviews.length, "rating") %>)
      <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
    </div>
  <% end %>
  <% else %>
    No restaurants yet
  <% end %>
</div>


<a href='restaurants/new'>Add a restaurant</a>
